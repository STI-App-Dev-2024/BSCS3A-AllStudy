<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp" />

    <ImageView
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="225dp"
        android:layout_marginTop="218dp"
        android:background="@drawable/code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/active_server"
        android:layout_marginTop="200dp"
        android:layout_marginStart="45dp"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginStart="50dp"
        android:text="@string/join_now"
        android:textColor="@color/black"
        android:backgroundTint="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coding"
        android:layout_marginTop="260dp"
        android:layout_marginStart="60dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:shadowColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more_active_servers"
        android:layout_marginTop="400dp"
        android:layout_marginStart="40dp"
        android:textStyle="bold"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="140dp"
        android:background="@drawable/rectangle"
        android:layout_marginTop="830dp"
        android:backgroundTint="#4c4746" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bell"
        android:layout_marginTop="840dp"
        android:layout_marginStart="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/heart"
        android:layout_marginStart="330dp"
        android:layout_marginTop="835dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/generic_avatar"
        android:layout_marginStart="340dp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/allstudy"
        android:layout_marginStart="100dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_of_servers"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="35dp" />


</RelativeLayout>